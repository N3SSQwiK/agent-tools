{
  "$schema": "https://code.claude.com/schemas/settings.json",
  "_comment": "Nexus-AI Balanced Preset - Auto-approve safe operations, ask for writes",
  "permissions": {
    "defaultMode": "default",
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(npm run build)",
      "Bash(npm run dev)",
      "Bash(npm run start)",
      "Bash(npm install)",
      "Bash(npm ci)",
      "Bash(yarn lint)",
      "Bash(yarn test:*)",
      "Bash(yarn build)",
      "Bash(yarn install)",
      "Bash(pnpm lint)",
      "Bash(pnpm test:*)",
      "Bash(pnpm build)",
      "Bash(pnpm install)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git stash:*)",
      "Bash(make lint)",
      "Bash(make test)",
      "Bash(make build)",
      "Bash(cargo check)",
      "Bash(cargo test)",
      "Bash(cargo build)",
      "Bash(cargo clippy)",
      "Bash(go test:*)",
      "Bash(go build:*)",
      "Bash(go vet)",
      "Bash(python -m pytest:*)",
      "Bash(python -m mypy:*)",
      "Bash(python -m ruff:*)"
    ],
    "deny": [
      "Read(**/.env*)",
      "Read(**/secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*credential*)",
      "Read(**/*password*)",
      "Bash(rm -rf:*)",
      "Bash(rm -r:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(netcat:*)",
      "Bash(chmod 777:*)",
      "Bash(sudo:*)"
    ],
    "ask": [
      "Edit",
      "Write",
      "Bash(git push:*)",
      "Bash(npm publish:*)",
      "Bash(docker:*)"
    ]
  }
}
